{
  "name": "email-notifier",
  "version": "9.2.0",
  "description": "email notifier to monitor the notificaion kafka topic and send emails.",
  "main": "app.js",
  "dependencies": {
    "@mojaloop/central-services-error-handling": "9.1.0",
    "@mojaloop/central-services-health": "9.1.0",
    "@mojaloop/central-services-logger": "9.1.0",
    "@mojaloop/central-services-shared": "9.1.4",
    "@mojaloop/central-services-stream": "9.1.0",
    "bluebird": "3.7.2",
    "config": "3.2.5",
    "mustache": "4.0.0",
    "nodemailer": "6.4.2",
    "rxjs": "6.5.4",
    "rxjs-compat": "6.5.4",
    "uuid4": "1.1.4"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "standard": "standard",
    "test": "npm run test:unit | faucet",
    "test:unit": "tape 'test/unit/**/*.test.js'",
    "test:xunit": "tape 'test/unit/**/*.test.js' | tap-xunit",
    "test:coverage": "istanbul cover tape -- 'test/unit/**/*.test.js'",
    "test:coverage-check": "npm run test:coverage && istanbul check-coverage",
    "audit:resolve": "SHELL=sh resolve-audit && sed -i 's/: \"^/: \"/' package.json",
    "audit:check": "SHELL=sh check-audit",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/email-notifier"
  },
  "author": "Valentin Genev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mojaloop/email-notifier"
  },
  "homepage": "https://github.com/mojaloop/email-notifier#readme",
  "devDependencies": {
    "faucet": "0.0.1",
    "istanbul": "1.1.0-alpha.1",
    "nodemon": "2.0.2",
    "npm-audit-resolver": "2.2.0",
    "npm-check-updates": "4.0.1",
    "proxyquire": "2.1.3",
    "rewire": "4.0.1",
    "rxjs-marbles": "5.0.4",
    "sinon": "8.1.1",
    "standard": "14.3.1",
    "tape": "4.13.0",
    "tapes": "4.1.0"
  }
}
